        <form id="form" class="form" method="GET" autocomplete="off">
            <input id="input1" autofocus name="name" type="text" autocomplete="off" placeholder=" " required pattern="^[A-Za-z -]+" value=""/>
            <label for="input1"><h3 tabindex="-1">Wat is je naam?</h3>
                <span class="progress-dot dot-one" tabindex="1"></span> 
            </label> 
 
           <fieldset>
               <legend><h3 tabindex="-1">Hoe oud ben je?</h3></legend>
               <input type="radio" name="leeftijd" id="18ofjonger" value="18 of jonger" required />
