               <input type="radio" name="leeftijd" id="25jaar" value="25" required />
               <label for="25jaar">25 jaar of ouder</label>
               <span class="progress-dot dot-two" tabindex="1"></span> 
           </fieldset> 

            <select id="color" required>
                <option value="">Kies een kleur</option>
                <option value="red"><span class="color-box red"></span>Rood</option>
                <option value="green"><span class="color-box green"></span>Groen</option>
                <option value="blue"><span class="color-box blue"></span>Blauw</option>
                <option value="yellow"><span class="color-box yellow"></span>Geel</option>
                <option value="other">Een andere kleur</option>
            </select>

            <label for="color"><h3 tabindex="-1">Wat is je favoriete kleur?</h3>
                <span class="progress-dot dot-three" tabindex="1"></span> 
            </label>

            <input id="birthday" autocomplete="off" placeholder="04-09-1996" type="text" name="verjaardag" required min="1980-01-01" max="2002-01-01" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" value=""/>
            <label for="birthday"><h3 tabindex="-1">Wat is je geboortedatum?</h3>
